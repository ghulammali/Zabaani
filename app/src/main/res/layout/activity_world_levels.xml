<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorldLevelsActivity">

    <TextView
        android:id="@+id/wlText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="World levels"
        android:layout_marginTop="40dp"

        />


    <ScrollView
        android:id="@+id/ScrollTable"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintHeight_percent="0.70"

        app:layout_constraintTop_toBottomOf="@id/wlText"
        app:layout_constraintRight_toRightOf="@id/wlText"
        app:layout_constraintLeft_toLeftOf="@id/wlText"


        />




</androidx.constraintlayout.widget.ConstraintLayout>