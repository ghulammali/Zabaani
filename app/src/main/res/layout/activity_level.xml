<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wback"
    tools:context=".LevelActivity">

    <Button
        android:id="@+id/level_1"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/rounded_red_border"
        android:fontFamily="@font/changa"
        android:text="Button"
        android:textColor="#adcf64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/level_2"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="228dp"
        android:layout_marginTop="168dp"
        android:background="@drawable/rounded_red_border"
        android:fontFamily="@font/changa"
        android:text="Button"
        android:textColor="#adcf64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/level_1" />

    <Button
        android:id="@+id/level_3"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="244dp"
        android:background="@drawable/rounded_red_border"
        android:fontFamily="@font/changa"
        android:text="Button"
        android:textColor="#adcf64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/level_2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="213dp"
        android:layout_height="78dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="484dp"
        android:fontFamily="sans-serif"
        android:text="کھیلو گے تو سیکھو گے!"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
