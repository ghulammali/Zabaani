<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatchTwoTutorialActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/MatchTwoHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/MatchTwoTutorial_Header"
        android:textColor="#572308"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="77dp"
        android:layout_height="127dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="300dp"
        app:layout_constraintEnd_toEndOf="@+id/MatchTwoHeader"
        app:layout_constraintTop_toTopOf="@+id/MatchTwoHeader"
        app:srcCompat="@drawable/arrowleft" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="77dp"
        android:layout_height="127dp"
        android:layout_marginStart="275dp"
        android:layout_marginTop="260dp"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/MatchTwoHeader"
        app:srcCompat="@drawable/arrowright" />

    <FrameLayout
        android:id="@+id/frameLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="24dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@id/MatchTwoHeader"
        app:layout_constraintRight_toRightOf="@id/MatchTwoHeader"
        app:layout_constraintTop_toBottomOf="@id/MatchTwoHeader">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            app:layout_constraintLeft_toLeftOf="@id/MatchTwoHeader"
            app:layout_constraintRight_toRightOf="@id/MatchTwoHeader"
            app:layout_constraintTop_toBottomOf="@id/MatchTwoHeader" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>